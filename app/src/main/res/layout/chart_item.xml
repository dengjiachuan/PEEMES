<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/chart_item_layout"
    android:background="@color/bg_blue">
    <TextView
        android:id="@+id/chart_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/chart_item_yixi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart_item_time"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#4a5384"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/chart_item_UOMyixi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart_item_yixi"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#4a5384"
        android:textSize="13sp"/>
</RelativeLayout>